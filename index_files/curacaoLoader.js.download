(function() {
    if (window && window.document) {
        var loaded = false;
        document.addEventListener(
            "load",
            function(e) {
                if (!loaded) {
                    var el = e.target;
                    var anchor = "footer-image";
                    if (el.className && el.className.indexOf(anchor) >= 0) {
                        var scriptEl = document.createElement("script");
                        scriptEl.src = "https://94dfd5d8-3011-4488-9aca-ed69909b8001.curacao-egaming.com/ceg-seal.js";
                        document.body.appendChild(scriptEl);
                        loaded = true;
                    }
                }
            },
            true
        );
    }
})();
